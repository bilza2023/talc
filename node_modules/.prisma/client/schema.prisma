// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * ---------- Enums ----------
 */
enum StationCode {
  JSS
  PSS
  KEF
  // add more when needed
}

/**
 * ---------- Core look-ups ----------
 */
model Supplier {
  id   Int    @id @default(autoincrement())
  name String
  code String @unique // e.g. SUP001
  ores Ore[] // back-ref
}

/**
 * ---------- Main tables ----------
 */
model Ore {
  id          Int         @id @default(autoincrement())
  stationCode StationCode // stored as TEXT in SQLite
  supplierId  Int
  weightTon   Float
  gradeCode   String // WL, WC, WF, GL, GC, GF
  createdAt   DateTime    @default(now())

  supplier Supplier @relation(fields: [supplierId], references: [id])

  @@index([stationCode, createdAt])
}

model OreTransport {
  id          Int         @id @default(autoincrement())
  fromStation StationCode
  toStation   StationCode
  truckNo     String
  weightTon   Float
  gradeCode   String?
  supplierId  Int?
  status      String      @default("in_transit")
  departedAt  DateTime
  receivedAt  DateTime?

  @@index([fromStation, departedAt])
  @@index([toStation, receivedAt])
}

/**
 * ---------- System logs ----------
 */
model Log {
  id        Int      @id @default(autoincrement())
  level     String   @default("info") // "info" | "warn" | "error"
  type      String? // e.g. "ORE_DEPOSIT", "ORE_DESPATCH"
  metadata  Json? // arbitrary payload
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@map("logs") // table name = "logs"
}
